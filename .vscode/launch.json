{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "API Gateway",
      "type": "python",
      "request": "launch",
      "module": "uvicorn",
      "args": ["services.api_gateway.app.main:app", "--reload", "--host", "127.0.0.1", "--port", "9000"],
